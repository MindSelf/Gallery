<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <!--TabView找到@android:id/text1对应的TextView作为其mCustomTextView，并将Tab.mText更新到TextView上-->
    <TextView
        android:id="@android:id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="福利"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"/>

    <!--同理，TabView也会找到@android:id/icon对应的ImageView作为其mCustomIconView，但因为Tab.mIcon为空，-->
    <!--所以反倒会将该ImageView隐藏-->
    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="6dp"
        android:src="@mipmap/ic_close_white"
        android:tint="@color/windowBackground"
        android:tintMode="screen"/>

</LinearLayout>